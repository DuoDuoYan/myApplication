<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/container">

    <ImageView
        android:id="@+id/expend"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="82dp"
        android:src="@drawable/icon_bottom" />
    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/c_order"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2020-1232sdf-"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/c_table"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="202013413-12"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/c_date"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="2020-12-11 12:23:12:"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/c_btn"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:onClick="onItemClick"
            android:text="@string/receive"
            android:textColor="@color/red"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:id="@+id/parent_dashed_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layerType="software"
        android:layout_below="@id/parent_layout"
        android:background="@drawable/dashed_style_view"/>

</RelativeLayout>